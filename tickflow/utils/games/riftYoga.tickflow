yogaSetup:
    0x8B<1> 0, 125, 75, 0
    0xB3<1> isIdleInput, 1
    0x101<1> 2
    label 0x1592
    //Warrior Left!
    0x200<2> 5
    if 1
        0xB2<1> pressingLeft
        if 0
            0xB3<1> pressingLeft, 1
            0xB2<1> isIdleInput
            if 1
                async_call missLeft
            else
                async_call playLeft
            endif
        endif
    else
        0xB3<1> pressingLeft, 0
    endif
    //Warrior Right!
    0x200<2> 4
    if 1
        0xB2<1> pressingRight
        if 0
            0xB3<1> pressingRight, 1
            0xB2<1> isIdleInput
            if 1
                async_call missRight
            else
                async_call playRight
            endif
        endif
    else
        0xB3<1> pressingRight, 0
    endif
    //Make a Tree!
    0x200<2> 6
    if 1
        0xB2<1> pressingUp
        if 0
            0xB3<1> pressingUp, 1
            0xB2<1> isIdleInput
            if 1
                async_call missTree
            else
                async_call playTree
            endif
        endif
    else
        0xB3<1> pressingUp, 0
    endif
    //Downward Dog!
    0x200<2> 7
    if 1
        0xB2<1> pressingDown
        if 0
            0xB3<1> pressingDown, 1
            0xB2<1> isIdleInput
            if 1
                async_call missDog
            else
                async_call playDog
            endif
        endif
    else
        0xB3<1> pressingDown, 0
    endif

    rest 1
    goto 0x1592
stop

showInputStar:
0xB2 inputEffect
switch
	case 1
		0x3B 2, 1, "cmn_ok01", -0x50, 0, 0x100, 0x18
	break
	case 2
		0x3B 2, 1, "cmn_ok00", -0x26, 0, 0x100, 0x18
	break
	case 3
		0x3B 2, 1, "cmn_just00", 0, 0, 0x100, 0x18
	break
	case 4
		0x3B 2, 1, "cmn_ok00", 0x26, 0, 0x100, 0x18
	break
	case 5
		0x3B 2, 1, "cmn_ok01", 0x50, 0, 0x100, 0x18
	break	
endswitch
stop	

setInputEffect: //Imagine this as a replacement for the 0x100 command for the shake up input
0xB3 inputEffect, 1
rest 2
0xB3 inputEffect, 2
rest 3
0xB3 inputEffect, 3
rest 2
0xB3 inputEffect, 4
rest 3
0xB3 inputEffect, 5
rest 4
0xB3 inputEffect, 0	
stop	

