//Half a beat early
cueDownwardDog:
    rest 0x10
    0xB3<1> isIdleInput, 0
    0xB3 readyToInput, 0
    async_call waitForUnpressDown
    set_countdown 16
    rest 1
    async_call setInputEffect
    label 0x7009
    0xB2 readyToInput
    if 1
        0x200<2> 7
        if 1
            async_call showInputStar
            goto 0xD05E
        endif
    endif
    rest 1
    dec_countdown
    get_countdown
    if_neq 0
        goto 0x7009
    endif
    //Failed input
    async_call missDog
    label 0xD05E
    0xB2<1> isIdleInput,1
stop

waitForUnpressDown:
    label 0xC4EC
    rest 1
    0xB2<1> pressingDown
    if 1
        goto 0xC4EC
    endif
    0xB3 readyToInput, 1
stop

//Half a beat early
